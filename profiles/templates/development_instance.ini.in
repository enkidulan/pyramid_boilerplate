[pipeline:main]
pipeline =
    frontend
    backend

[filter:frontend]
use = egg:blog_frontend#blog_frontend
document_root = blog_frontend:build

[app:backend]
use = egg:blog_backend

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en
pyramid.includes =
    pyramid_debugtoolbar
    pyramid_tm

debugtoolbar.exclude_prefixes = /manage

zodbconn.uri = file://${work_dirs:filestorage}/Data.fs?connection_cache_size=50000&blobstorage_dir=${work_dirs:blobs}&blobstorage_layout=bushy
zodbconn.uri.audit = file://${work_dirs:filestorage}/audit.fs?connection_cache_size=50000&blobstorage_dir=${work_dirs:blobs}&blobstorage_layout=bushy
tm.attempts = 3

substanced.secret = ${configs:substanced_secret}
substanced.initial_login = ${configs:substanced_initial_login}
substanced.initial_password = ${configs:substanced_initial_password}
substanced.uploads_tempdir = ${work_dirs:tmp}
substanced.catalogs.autosync = true

mail.default_sender = ${configs:mail_default_sender}

[server:main]
use = egg:chaussette#main
host = 0.0.0.0
port = ${configs:port}

# Begin logging configuration

[loggers]
keys = root, blog_backend, substanced

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_blog_backend]
level = DEBUG
handlers =
qualname = blog_backend

[logger_substanced]
level = INFO
handlers =
qualname = substanced

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s

# End logging configuration
